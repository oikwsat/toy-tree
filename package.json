{
  "name": "toy-tree",
  "version": "1.0.0",
  "description": "ディレクトリ内をツリー表示するコマンド。WEB+DB PRESS Vol.117",
  "main": "index.js",
  "bin": {
    "toy-tree": "dist/bin.js"
  },
  "jest": {
    "preset": "ts-jest",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-empty-interface": 0
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint \"**/*.ts\"",
    "format": "prettier --write \"**/*.{js,ts,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oikwsat/toy-tree.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oikwsat/toy-tree/issues"
  },
  "homepage": "https://github.com/oikwsat/toy-tree#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "meow": "^7.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "jest": "^26.2.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  }
}
